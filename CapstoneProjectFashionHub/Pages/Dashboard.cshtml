    ViewData["Title"] = "Dashboard page";
}

@* Dashboard Product start *@
<section class="dashboard" id="dashboard">
    <div class="row">
        <div class="text-judul">
            <h2><span>Dashboard Analisis</span> Tren Penjualan</h2>
            <p>Berikut kumpulan dan ringkasan Dashboard FashionHub</p>
        </div>

        <iframe title="TUGAS DASHBOARD CAPSTONE TERBARU FIX"  
